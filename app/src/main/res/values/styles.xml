        <item name="floatingSearch_dividerColor">@color/fundalverde</item>
        <item name="floatingSearch_clearBtnColor">@color/white</item>
        <item name="floatingSearch_leftActionColor">@color/white</item>
        <item name="floatingSearch_menuItemIconColor">@color/white</item>
        <item name="floatingSearch_suggestionRightIconColor">@color/white</item>
