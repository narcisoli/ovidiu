<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.example.intern06.lifereminder.Login">






    <com.facebook.login.widget.LoginButton
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/facebooklogin"
        app:theme="@style/com_facebook_button_share"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:id="@+id/google"
        >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/google"
        android:id="@+id/imagegoogle"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continua cu Google"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imagegoogle"
        android:textStyle="italic"
        android:id="@+id/textView"
        android:layout_marginLeft="20dp"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/google"
        android:id="@+id/facebook"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/facebook"
        android:id="@+id/iamgefacebook"
         />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continua cu Facebook"
            android:textSize="17sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:id="@+id/textView2"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iamgefacebook"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <com.google.android.gms.common.SignInButton
        android:id="@+id/googlelogin"
        android:layout_width="wrap_content"
        android:layout_below="@id/facebooklogin"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_height="wrap_content">
    </com.google.android.gms.common.SignInButton>

</RelativeLayout>
